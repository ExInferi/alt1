{
	"compilerOptions": {
		"rootDir": "./",
		"moduleResolution": "node",
		"module": "commonjs",
		"lib": [ "es6", "dom" ],
		"target": "es6",
		"alwaysStrict": true,
		"jsx": "react",
		"allowJs": false,
		"baseUrl": ".",
		"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true
	},
	"exclude": [ "node_modules", "./types/*", "./scripts/**", "**/webpack.config.ts" ],
	"compileOnSave": false
}